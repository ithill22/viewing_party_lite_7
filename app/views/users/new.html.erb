<h3>Register a New User</h3>

<%= form_with url: "/register/#{@user.id}", method: :post do |f| %>

    <%= f.label :name, 'Name:'  %><br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email, 'Email:' %>
    <%= f.email_field :email %>
    <br>
    <%= f.submit 'Create New User' %>
<% end %>