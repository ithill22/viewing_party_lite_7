<h1>Users Discover Index Page</h1>

<%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", method: :get %><br>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
  <%= form.label :query %>
  <%= form.text_field :query, :required => true %>
  <%= form.submit 'Search Movie' %>
<% end %>